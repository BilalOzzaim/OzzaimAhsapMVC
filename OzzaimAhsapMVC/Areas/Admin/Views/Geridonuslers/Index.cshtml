@model IEnumerable<OzzaimAhsap.Models.Geridonusler>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="content-wrapper" style="min-height: 236.4px;">
    <section class="content">
        <h1>Kullanıcılar</h1>
        <p class="users-add">
            <a class="btn " href="/Admin/Geridonuslers/Create"><box-icon name='user-plus' type='solid' color='#ffffff'></box-icon>Kullanıcı Ekle</a>
        </p>

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kullanıcılar</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 20%">
                                @Html.DisplayNameFor(model => model.ad_soyad)
                            </th>
                            <th style="width: 30%">
                                @Html.DisplayNameFor(model => model.telefon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.email)
                            </th>
                            <th style="width: 8%">
                                @Html.DisplayNameFor(model => model.mesaj)
                            </th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ad_soyad)
                                </td>
                                <td>

                                    @Html.DisplayFor(modelItem => item.telefon)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.mesaj)
                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-info btn-sm" href="/Admin/Geridonuslers/Edit/@item.id">
                                        <i class="fas fa-pencil-alt">
                                        </i>Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Admin/Geridonuslers/Delete/@item.id">
                                        <i class="fas fa-trash">
                                        </i>
                                       Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</div>
