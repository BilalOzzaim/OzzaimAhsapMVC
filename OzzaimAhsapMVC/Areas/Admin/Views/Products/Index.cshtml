@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<OzzaimAhsapMVC.Models.Products>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<div class="content-wrapper " style="min-height: 236.4px;">
    <h1>Ürünler </h1>

    <p class="users-add">
        <a class="btn" href="/Admin/Products/Create"><box-icon name='plus' 
            color='#ffffff'></box-icon>Ürün Ekle</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.imageurl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.desciription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.price)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.imageurl"  style="width:200px;" alt="Alternate Text" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.desciription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                    <td class="project-actions text-right">

                        <a class="btn btn-info btn-sm" href="/Admin/Products/Edit/@item.Id">
                            <i class="fas fa-pencil-alt">
                            </i>Düzenle
                        </a>
                        <a class="btn btn-danger btn-sm" href="/Admin/Products/Delete/@item.Id">
                            <i class="fas fa-trash">
                            </i>
                            Sil
                        </a>
                    </td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>