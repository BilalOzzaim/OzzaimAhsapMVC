
@{
    ViewBag.Title = "Contact";
}

<section class="contact_section layout_padding-bottom">
    <div class="container-fluid">
        <div class="col-lg-4 col-md-5 offset-md-1">
            <div class="heading_container">
                <h2>
                    BİZE ULAŞIN
                </h2>
            </div>
        </div>
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <div class="row">
                <div class="col-lg-4 col-md-5 offset-md-1">
                    <div class="form_container">

                        <div>
                            <input id="isim" name="isim" type="text" placeholder="İsim Soyisim" />
                        </div>
                        <div>
                            <input id="telefon" name="telefon" type="text" placeholder="Telefon Numara" />
                        </div>
                        <div>
                            <input id="email" name="email" type="email" placeholder="Email" />
                        </div>
                        <div>
                            <input id="mesaj" name="mesaj" type="text" class="message-box" placeholder="Messaj" />
                        </div>
                        <div class="btn_box">
                            <button>
                                Gönder
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-lg-7 col-md-6 px-0">
                    <div class="map_container">
                        <div class="map">
                            <div id="googleMap">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d95929.57580664019!2d36.3136985!3d41.2914735!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x408877e97607d663%3A0xb939cc265fdeb52!2sSamsun!5e0!3m2!1str!2str!4v1709218338716!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</section>


